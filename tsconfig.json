{
  "include": ["./src/**/*"],
  "exclude": ["./src/**/.*"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "assets/*": ["assets/*"]
    },
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  }
}
